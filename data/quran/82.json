{
  "number": 82,
  "name": "سُورَةُ الانفِطَارِ",
  "numberOfAyahs": 19,
  "verses": [
    { "numberInSurah": 1, "text": "إِذَا ٱلسَّمَآءُ ٱنفَطَرَتْ" },
    { "numberInSurah": 2, "text": "وَإِذَا ٱلْكَوَاكِبُ ٱنتَثَرَتْ" },
    { "numberInSurah": 3, "text": "وَإِذَا ٱلْبِحَارُ فُجِّرَتْ" },
    { "numberInSurah": 4, "text": "وَإِذَا ٱلْقُبُورُ بُعْثِرَتْ" },
    { "numberInSurah": 5, "text": "عَلِمَتْ نَفْسٌ مَّآ قَدَّمَتْ وَأَخَّرَتْ" },
    { "numberInSurah": 6, "text": "يَٰٓأَيُّهَا ٱلْإِنسَٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلْكَرِيمِ" },
    { "numberInSurah": 7, "text": "ٱلَّذِى خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ" },
    { "numberInSurah": 8, "text": "فِىٓ أَىِّ صُورَةٍ مَّا شَآءَ رَكَّبَكَ" },
    { "numberInSurah": 9, "text": "كَلَّا بَلْ تُكَذِّبُونَ بِٱلدِّينِ" },
    { "numberInSurah": 10, "text": "وَإِنَّ عَلَيْكُمْ لَحَٰفِظِينَ" },
    { "numberInSurah": 11, "text": "كِرَامًا كَٰتِبِينَ" },
    { "numberInSurah": 12, "text": "يَعْلَمُونَ مَا تَفْعَلُونَ" },
    { "numberInSurah": 13, "text": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍ" },
    { "numberInSurah": 14, "text": "وَإِنَّ ٱلْفُجَّارَ لَفِى جَحِيمٍ" },
    { "numberInSurah": 15, "text": "يَصْلَوْنَهَا يَوْمَ ٱلدِّينِ" },
    { "numberInSurah": 16, "text": "وَمَا هُمْ عَنْهَا بِغَآئِبِينَ" },
    { "numberInSurah": 17, "text": "وَمَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ" },
    { "numberInSurah": 18, "text": "ثُمَّ مَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ" },
    { "numberInSurah": 19, "text": "يَوْمَ لَا تَمْلِكُ نَفْسٌ لِّنَفْسٍ شَيْـًٔا ۖ وَٱلْأَمْرُ يَوْمَئِذٍ لِّلَّهِ" }
  ]
}